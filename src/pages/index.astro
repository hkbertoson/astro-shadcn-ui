---
import DialogWrapper from '@/components/Dialog';
import {MyCarousel} from '@/components/MyCarousel';
import MyDrawer from '@/components/MyDrawer';
import '@/styles/globals.css';
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Astro - Enhanced</title>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
			integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMU2HtZ4b7eQhKRVg5Q9GLVoUQ5RhlzVHX5SU8g"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<div class="container">
			<section class="section">
				<h1>Dialog</h1>
				<div class="section-content">
					<i class="fas fa-comments"></i>
					<DialogWrapper client:load />
				</div>
			</section>
			<section class="section">
				<h1>Drawer</h1>
				<div class="section-content">
					<i class="fas fa-folder-open"></i>
					<MyDrawer client:load />
				</div>
			</section>

			<section class="section">
				<h1>Carousel</h1>
				<div class="section-content">
					<MyCarousel client:load />
				</div>
			</section>
		</div>
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: Arial, sans-serif;
		display: flex;
		justify-content: center;
		align-items: center;
		background: #f9f9f9;
		min-height: 100vh;
		padding: 20px;
	}

	.container {
		max-width: 600px;
		width: 100%;
		background: #fff;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		border-radius: 8px;
		overflow: hidden;
	}

	.container h1 {
		font-size: 24px;
		padding: 20px;
		background-color: #0077cc;
		color: #fff;
		text-align: center;
	}

	.section {
		padding: 20px;
		border-top: 1px solid #f0f0f0;
	}

	.section h1 {
		margin-bottom: 10px;
		font-size: 20px;
		color: #333;
	}

	.section-content {
		text-align: center;
		padding: 15px 0;
		color: #555;
	}

	.section-content i {
		color: #0077cc;
		font-size: 30px;
	}
</style>
